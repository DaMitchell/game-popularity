<div class="game-list nano-content">
  {{#if loading}}
      <div class="msg">Getting games.</div>
      <div class="loader">
          <div class="loader-inner ball-scale-ripple-multiple">
              <div></div>
              <div></div>
              <div></div>
          </div>
      </div>
  {{else}}
    {{#each games as |game|}}
        <div class="game" {{action "selectGame" game}}>
            <img src={{game.box.medium}} alt={{game.name}}/>
            <div class="name">{{game.name}}</div>
        </div>
    {{else}}
        No games to select
    {{/each}}
  {{/if}}
</div>